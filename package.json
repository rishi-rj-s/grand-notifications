{
  "name": "grand-notifications",
  "version": "2.4.1",
  "description": "Beautiful, customizable toast notifications with artistic animations",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "style": "dist/grand-notifications.css",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "toast",
    "notification",
    "vanilla",
    "javascript",
    "typescript",
    "react",
    "vue",
    "angular",
    "svelte"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishi-rj-s/grand-notifications.git"
  },
  "author": "Rishiraj Sajeev",
  "license": "MIT",
  "scripts": {
    "clean": "rmdir /s /q \"dist\"",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "vite build && npm run build:types",
    "dev": "vite"
  },
  "bugs": {
    "url": "https://github.com/rishi-rj-s/grand-notifications/issues"
  },
  "homepage": "https://github.com/rishi-rj-s/grand-notifications#readme",
  "sideEffects": false,
  "devDependencies": {
    "rollup-plugin-visualizer": "^5.14.0",
    "shx": "^0.4.0",
    "typescript": "^5.3.0",
    "vite": "^6.3.5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./grand-notifications.css": "./dist/grand-notifications.css"
  }
